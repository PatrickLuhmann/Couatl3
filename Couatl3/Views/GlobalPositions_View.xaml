<UserControl x:Class="Couatl3.Views.GlobalPositions_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Couatl3.Views"
             xmlns:views="clr-namespace:Couatl3.Views"
             xmlns:vms="clr-namespace:Couatl3.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vms:GlobalPositions_VM/>
    </UserControl.DataContext>
    <Grid>
        <StackPanel>
            <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Positions}" CanUserAddRows="False" CanUserResizeRows="False" CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Symbol}" Header="Symbol"/>
                    <DataGridTextColumn Binding="{Binding SecurityName}" Header="Security Name"/>
                    <DataGridTextColumn Binding="{Binding ThePosition.Quantity}" Header="Quantity"/>
                    <DataGridTextColumn Binding="{Binding Value, StringFormat=C2}" Header="Value"/>
                    <DataGridTextColumn Binding="{Binding ThePosition.SecurityId}" Header="SecurityId"/>
                    <DataGridTextColumn Binding="{Binding ThePosition.AccountId}" Header="AccountId"/>
                </DataGrid.Columns>
            </DataGrid>
            <TreeView ItemsSource="{Binding Positions}">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type vms:GlobalPosition_VM}" ItemsSource="{Binding SecLots}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50" Text="{Binding Symbol}" />
                            <TextBlock>Hello World!</TextBlock>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type vms:SecurityLot_VM}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="100" Text="{Binding Date}" />
                            <TextBlock Width="50" Text="{Binding Quantity}" />
                            <TextBlock Width="50" Text="{Binding TotalCostBasis, StringFormat=C}" />
                            <TextBlock Width="50" Text="{Binding PerShareCostBasis, StringFormat=C}" />
                            <TextBlock Width="50" Text="{Binding Value, StringFormat=C}" />
                            <TextBlock Width="50" Text="{Binding NetGain, StringFormat=C}" />
                            <TextBlock Width="50" Text="{Binding PercentGain, StringFormat=P}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>
        </StackPanel>
    </Grid>
</UserControl>
