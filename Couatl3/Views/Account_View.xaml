<UserControl x:Class="Couatl3.Views.Account_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Couatl3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock>
                <Run Text="Name:"/>
                <Run Text="{Binding TheAccount.Name}"/>
            </TextBlock>
            <TextBlock>
                <Run Text="Institution:"/>
                <Run Text="{Binding TheAccount.Institution}"/>
            </TextBlock>
            <TextBlock>
                <Run Text="Cash: $"/>
                <Run Text="{Binding TheAccount.Cash}"/>
            </TextBlock>
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="5,5,15,5">
                    <TextBlock>Positions</TextBlock>
                    <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding TheAccount.Positions}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Security.Name}" Header="Security"/>
                            <DataGridTextColumn Binding="{Binding Security.Symbol}" Header="Symbol"/>
                            <DataGridTextColumn Binding="{Binding Quantity}" Header="Quantity"/>
                            <DataGridTextColumn Header="Value"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
                <StackPanel Margin="5,5,15,5">
                    <TextBlock>Transactions</TextBlock>
                    <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding TheAccount.Transactions}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Date}" Header="Date"/>
                            <DataGridTextColumn Binding="{Binding Type}" Header="Type"/>
                            <DataGridTextColumn Binding="{Binding Security.Symbol}" Header="Symbol"/>
                            <DataGridTextColumn Binding="{Binding Quantity}" Header="Quantity"/>
                            <DataGridTextColumn Binding="{Binding Value}" Header="Value"/>
                            <DataGridTextColumn Binding="{Binding Fee}" Header="Fee"/>
                            <DataGridTextColumn Header="Cash Balance"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
